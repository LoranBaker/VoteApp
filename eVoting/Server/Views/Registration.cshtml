<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/style.css">
    <title>Online Election System</title>

    <link rel="icon" href="img/baicon.png" type="image/x-icon" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet" href="css/mdb.min.css" />
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header>
    </header>
    <main>
        <form asp-action="Register" method="post">
            <div class="wrapper rounded bg-white">
                <div class="h3">Registration Form</div>
                <div class="form">
                    <div class="row">
                        <div class="col-md-6 mt-md-0 mt-3"> <label asp-for="FirstName">First Name</label> <input type="text" asp-for="FirstName" class="form-control" required> </div>
                        <div class="col-md-6 mt-md-0 mt-3"> <label asp-for="LastName">Last Name</label> <input type="text" asp-for="LastName" class="form-control" required> </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-md-0 mt-3"> <label asp-for="BirthDate">Birthday</label> <input type="date" asp-for="BirthDate" class="form-control" required> </div>
                        <div class="col-md-6 mt-md-0 mt-3">
                            <label>Gender</label>
                            <div class="d-flex align-items-center mt-2"> <label class="option"> <input type="radio" asp-for="Gender" name="radio">Male @Html.DisplayNameFor(model => model.Gender) <span class="checkmark"></span>  </label> <label class="option ms-4"> <input type="radio" name="radio">Female <span class="checkmark"></span> </label> </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-md-0 mt-3"> <label asp-for="JMBG">Unique ID</label> <input type="text" asp-for="JMBG" class="form-control" required> </div>
                        <div class="col-md-6 mt-md-0 mt-3"> <label asp-for="">Phone Number</label> <input type="tel" asp-for="" class="form-control" required> </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PartyId" class="control-label">PartyId: </label>

                        @{
                            eVoting.Server.Models MyContext = new eVoting.Server.Models.MyContext();
                            List<eVoting.Server.Models.Votelist> VoteList = MyContext.VotelistParty.ToList();

                            <select value="PartyId" name="PartyId" class="form-control">
                                @{
                                    <option value="" disabled hidden selected>Select</option>
                                    foreach (eVoting.Server.Models.VotelistParty s in VoteList)
                                    {
                                        <option value="@s.Id">@s.name</option>
                                    }
                                }
                            </select>
                        }
                    </div>


                    <div><a class="btn btn-primary mt-3" href="votepage.html" value="Create" target="_blank" role="button">Submit</a></div>
                </div>
            </div>
        </form>
    </main>

</body>
</html>
<!-- MDB -->
<script type=" text/javascript " src="js/mdb.min.js "></script>
<!-- Custom scripts -->
<script type="text/javascript "></script>

